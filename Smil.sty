% 
% Macro - Smil functions
%

% One alias for the function name and another for the parameters
% will expand to "#1"
\newcommand{\SmFun}[1]{\texttt{\textbf{#1}}}
% will expand to "(#2)"
\newcommand{\SmPar}[1]{\texttt{\BF{(}#1\BF{)}}}

% Combine function name and parameters in a single alias
% will expand to #1(#2)
\newcommand{\SmFn}[2] {\SmFun{#1}\SmPar{#2}}


% will expand to (2 lines)
% #1
%    (#2)
\newcommand{\SmFnDL}[2] {\SmFun{#1}\\ \hspace{35pt}\SmPar{#2}}

% A function with some return value
% will expand to "#1 = #2(#3)"
\newcommand{\SmFnRet}[3]{\TT{#1 = }\SmFun{#2}\SmPar{#3}}
\newcommand{\SmFr}[3]{\TT{#1 = }\SmFun{#2}\SmPar{#3}}
